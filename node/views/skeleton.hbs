<!DOCTYPE html>
<meta charset="utf-8" />
<meta name="viewport" content="width=device-width, initial-scale=1.0" />
{{!-- <link rel="stylesheet" href="/static/klaus.css" /> --}}
<link rel="stylesheet" href="/static/output.css" />
<link rel="icon" type="image/png" href="/static/favicon.png" />
{{#if meta.base_href}}
  <base href="{{ meta.base_href }}" />
{{/if}}
<title>{{ meta.title }} - {{ SITE_NAME }}</title>

<script src="/static/klaus.js"></script>

<div class="h-screen flex flex-col">
  <div class="border-b py-2 bg-gradient-to-r from-gray-100 to-white">
    <div class="container mx-auto">
      <a href="/">
        {{ SITE_NAME }}
      </a>
    </div>
  </div>

  <div class="container mx-auto pt-8">
    <div id="content">{{{ body }}}</div>
  </div>

  <footer class="mt-auto border-t py-2 bg-gradient-to-r from-gray-100 to-white">
    <div class="container mx-auto text-sm text-gray-700">
      Powered by <a href="https://github.com/jonashaag/klaus">klaus</a>
      {{ KLAUS_VERSION }}, a simple Git viewer by Jonas Haag
    </div>
  </footer>
</div>
